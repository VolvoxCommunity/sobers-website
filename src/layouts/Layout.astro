---
import "../styles/global.css";
import "@fontsource/jetbrains-mono/400.css";
import "@fontsource/jetbrains-mono/500.css";
import "@fontsource/jetbrains-mono/600.css";
import "@fontsource/jetbrains-mono/700.css";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import AnimatedBackground from "@/components/AnimatedBackground.astro";
import CookieConsent from "@/components/CookieConsent.astro";
import Analytics from "@vercel/analytics/astro";
import { SITE_URL } from "@/constants/urls";

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  canonicalUrl?: string;
}

const {
  title,
  description = "Free recovery companion app for sponsors and sponsees in AA, NA, and 12-step recovery programs. Track sobriety, manage tasks, and celebrate milestones together.",
  ogImage = "/og-image.png",
  canonicalUrl,
} = Astro.props;

const siteUrl = SITE_URL;
const fullCanonicalUrl = canonicalUrl ? `${siteUrl}${canonicalUrl}` : Astro.url.href;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <link rel="canonical" href={fullCanonicalUrl} />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/logo.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={fullCanonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={`${siteUrl}${ogImage}`} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="Sobers - Track the journey, not just the days" />
    <meta property="og:site_name" content="Sobers" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={fullCanonicalUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={`${siteUrl}/twitter-image.png`} />
    <meta property="twitter:image:alt" content="Sobers - Track the journey, not just the days" />

    <!-- Theme Color -->
    <meta name="theme-color" content="#0f172a" media="(prefers-color-scheme: dark)" />
    <meta name="theme-color" content="#ffffff" media="(prefers-color-scheme: light)" />

    <!-- Vercel Analytics -->
    <Analytics />

    <!-- Theme Script (prevent flash) -->
    <script is:inline>
      (function () {
        const theme = localStorage.getItem("theme");
        const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;

        if (theme === "dark" || (!theme && prefersDark)) {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }
      })();
    </script>
  </head>
  <body class="bg-theme text-primary-theme min-h-screen flex flex-col relative">
    <AnimatedBackground />
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <div class="relative z-10 flex flex-col min-h-screen">
      <Header />
      <main id="main-content" class="flex-1">
        <slot />
      </main>
      <Footer />
    </div>
    <CookieConsent />

    <!-- Confetti for download links -->
    <script>
      import confetti from "canvas-confetti";

      // Target all download/store links and elements with data-confetti
      const downloadSelectors = [
        'a[href*="apps.apple.com"]',
        'a[href*="play.google.com"]',
        'a[href*="app.sobers.app"]',
        "[data-confetti]",
      ];

      const downloadLinks = document.querySelectorAll(downloadSelectors.join(", "));

      downloadLinks.forEach((link) => {
        link.addEventListener("click", (e) => {
          // Fire confetti from the click position
          const rect = (e.currentTarget as HTMLElement).getBoundingClientRect();
          const x = (rect.left + rect.width / 2) / window.innerWidth;
          const y = (rect.top + rect.height / 2) / window.innerHeight;

          confetti({
            particleCount: 100,
            spread: 70,
            origin: { x, y },
            colors: ["#007aff", "#af58da", "#22c55e", "#ffffff"],
            disableForReducedMotion: true,
          });
        });
      });
    </script>

    <!-- Google Analytics Event Tracking -->
    <script>
      import * as CookieConsent from "vanilla-cookieconsent";

      /**
       * Track a Google Analytics event (only if analytics consent is granted).
       */
      function trackEvent(
        eventName: string,
        params: Record<string, string | number | boolean> = {}
      ) {
        if (!CookieConsent.acceptedCategory("analytics")) return;
        if (typeof window.gtag !== "function") return;

        window.gtag("event", eventName, params);
      }

      // Expose globally for components that need it
      (window as Window & { trackGAEvent?: typeof trackEvent }).trackGAEvent = trackEvent;

      // Track App Store / Google Play download clicks
      document.querySelectorAll('a[href*="apps.apple.com"]').forEach((link) => {
        link.addEventListener("click", () => {
          trackEvent("download_click", {
            platform: "ios",
            link_url: (link as HTMLAnchorElement).href,
          });
        });
      });

      document.querySelectorAll('a[href*="play.google.com"]').forEach((link) => {
        link.addEventListener("click", () => {
          trackEvent("download_click", {
            platform: "android",
            link_url: (link as HTMLAnchorElement).href,
          });
        });
      });

      // Track CTA button clicks
      document.querySelectorAll("a.btn-primary, a.btn-secondary").forEach((btn) => {
        btn.addEventListener("click", () => {
          const text = btn.textContent?.trim() || "unknown";
          const href = (btn as HTMLAnchorElement).href || "";
          trackEvent("cta_click", {
            button_text: text,
            destination: href,
          });
        });
      });

      // Track external link clicks (GitHub, Discord, etc.)
      document.querySelectorAll('a[target="_blank"]').forEach((link) => {
        const href = (link as HTMLAnchorElement).href;
        // Skip store links (already tracked as downloads)
        if (href.includes("apps.apple.com") || href.includes("play.google.com")) return;

        link.addEventListener("click", () => {
          let linkType = "external";
          if (href.includes("github.com")) linkType = "github";
          else if (href.includes("discord")) linkType = "discord";
          else if (href.includes("volvox")) linkType = "volvox";

          trackEvent("external_link_click", {
            link_type: linkType,
            link_url: href,
            link_text:
              (link as HTMLAnchorElement).textContent?.trim() ||
              link.getAttribute("aria-label") ||
              "unknown",
          });
        });
      });

      // Track FAQ interactions (use capture phase to run before toggle)
      document.querySelectorAll("[data-faq-trigger]").forEach((trigger) => {
        trigger.addEventListener(
          "click",
          () => {
            // Check state BEFORE the toggle happens (capture phase)
            const wasCollapsed = trigger.getAttribute("aria-expanded") !== "true";
            if (wasCollapsed) {
              const question = trigger.querySelector("span")?.textContent?.trim() || "unknown";
              trackEvent("faq_expand", {
                question: question,
              });
            }
          },
          { capture: true }
        );
      });
    </script>
  </body>
</html>
