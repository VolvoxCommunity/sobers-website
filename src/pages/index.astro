---
import Layout from "@/layouts/Layout.astro";
import Hero from "@/components/Hero.astro";
import Features from "@/components/Features.astro";
import HowItWorks from "@/components/HowItWorks.astro";
import Screenshots from "@/components/Screenshots.astro";
import FAQ from "@/components/FAQ.astro";
import CTA from "@/components/CTA.astro";

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "MobileApplication",
  name: "Sobers",
  alternateName: "Sobriety Waypoint",
  description:
    "Free accountability app for sponsors and sponsees in AA, NA, and 12-step recovery programs. Track sobriety, manage tasks, and celebrate milestones together.",
  applicationCategory: "HealthApplication",
  operatingSystem: "iOS, Android",
  offers: {
    "@type": "Offer",
    price: "0",
    priceCurrency: "USD",
  },
  aggregateRating: {
    "@type": "AggregateRating",
    ratingValue: "4.8",
    ratingCount: "100",
  },
  downloadUrl: [
    "https://apps.apple.com/us/app/sobriety-waypoint/id6755614815",
    "https://play.google.com/store/apps/details?id=com.volvox.sobrietywaypoint",
  ],
  author: {
    "@type": "Organization",
    name: "Volvox",
    url: "https://volvoxdev.com",
  },
};
---

<Layout title="Sobers - Recovery Accountability App for 12-Step Programs">
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  <Hero />
  <Features />
  <HowItWorks />
  <Screenshots />
  <FAQ />
  <CTA />
</Layout>
