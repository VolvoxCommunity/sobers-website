---
const features = [
  {
    icon: "link",
    title: "Sponsor-Sponsee Connection",
    description: "Secure pairing with unique invite codes. Connect in seconds.",
  },
  {
    icon: "calendar",
    title: "Sobriety Tracking",
    description: "Track your journey with transparent, honest day counting.",
  },
  {
    icon: "clipboard",
    title: "Task Management",
    description: "Sponsors assign tasks. Sponsees complete and add notes.",
  },
  {
    icon: "timeline",
    title: "Journey Timeline",
    description: "Visualize milestones, relapses, and step progress.",
  },
  {
    icon: "steps",
    title: "12-Step Progress",
    description: "Track your progress through all 12 steps.",
  },
  {
    icon: "devices",
    title: "Cross-Platform",
    description: "Available on iOS, Android, and Web. Syncs everywhere.",
  },
];

const icons: Record<string, string> = {
  link: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />`,
  calendar: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />`,
  clipboard: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />`,
  timeline: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />`,
  steps: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />`,
  devices: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />`,
};
---

<section id="features" class="py-20 lg:py-32">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-primary-theme mb-4">
        Everything you need for
        <span class="bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
          recovery accountability
        </span>
      </h2>
      <p class="text-lg text-secondary-theme max-w-2xl mx-auto">
        Built by people who understand the journey. Features designed to support real recovery, not
        just track it.
      </p>
    </div>

    <!-- Features Grid -->
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
      {
        features.map((feature, index) => (
          <div class="card p-6 lg:p-8 group" style={`animation-delay: ${index * 100}ms`}>
            <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-primary/20 to-secondary/20 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
              <svg
                class="w-6 h-6 text-primary"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                set:html={icons[feature.icon]}
              />
            </div>
            <h3 class="text-lg font-semibold text-primary-theme mb-2">{feature.title}</h3>
            <p class="text-secondary-theme text-sm">{feature.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
