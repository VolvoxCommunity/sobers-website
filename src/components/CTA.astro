---
const appStoreUrl = "https://apps.apple.com/us/app/sobriety-waypoint/id6755614815";
const playStoreUrl = "https://play.google.com/store/apps/details?id=com.volvox.sobrietywaypoint";
---

<section class="py-20 lg:py-32 relative overflow-hidden">
  <!-- Background Gradient -->
  <div class="absolute inset-0 -z-10">
    <div
      class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] bg-gradient-to-br from-primary/20 to-secondary/20 rounded-full blur-3xl"
    >
    </div>
  </div>

  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <!-- Badge -->
    <div
      class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-surface border border-theme mb-8"
    >
      <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
        <path
          fill-rule="evenodd"
          d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
          clip-rule="evenodd"></path>
      </svg>
      <span class="text-sm text-secondary-theme">No credit card required EVER</span>
    </div>

    <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-primary-theme mb-6">
      Start Your Recovery
      <span class="bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
        Journey Today
      </span>
    </h2>

    <p class="text-lg sm:text-xl text-secondary-theme mb-10 max-w-2xl mx-auto">
      Join thousands of sponsors and sponsees who are building stronger recovery together. Free
      forever, because recovery should be accessible to everyone.
    </p>

    <!-- App Store Badges -->
    <div class="flex flex-wrap gap-4 justify-center mb-8">
      <a
        href={appStoreUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="transition-transform hover:scale-105"
      >
        <img
          src="/app-store-badge.svg"
          alt="Download on the App Store"
          width="160"
          height="48"
          loading="lazy"
        />
      </a>
      <a
        href={playStoreUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="transition-transform hover:scale-105"
      >
        <img
          src="/google-play-badge.png"
          alt="Get it on Google Play"
          width="180"
          height="53"
          loading="lazy"
        />
      </a>
    </div>

    <!-- Trust Indicators -->
    <div class="flex flex-wrap items-center justify-center gap-6 text-sm text-muted-theme">
      <div class="flex items-center gap-2">
        <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
          <path
            fill-rule="evenodd"
            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
            clip-rule="evenodd"></path>
        </svg>
        <span>100% free</span>
      </div>
      <div class="flex items-center gap-2">
        <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
          <path
            fill-rule="evenodd"
            d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z"
            clip-rule="evenodd"></path>
        </svg>
        <span>Made with love</span>
      </div>
    </div>
  </div>
</section>
